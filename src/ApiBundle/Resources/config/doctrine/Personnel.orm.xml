<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ApiBundle\Entity\Personnel" table="personnel">
    <indexes>
      <index name="fk_personnel_adresse1_idx" columns="adresse_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="nom" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="prenom" type="string" column="prenom" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="typeContrat" type="string" column="type_contrat" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="actif" type="boolean" column="actif" nullable="true"/>
    <field name="sexe" type="string" column="sexe" length="1" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="adresse" target-entity="Adresse" fetch="LAZY">
      <join-columns>
        <join-column name="adresse_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="salon" target-entity="Salon" inversed-by="personnel" fetch="LAZY">
      <join-table name="personnel_has_salon">
        <join-columns>
          <join-column name="personnel_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="salon_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
