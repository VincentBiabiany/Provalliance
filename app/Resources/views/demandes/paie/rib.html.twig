{% extends 'base.html.twig' %}
{% form_theme form 'form/error.html.twig' %}
{% block title %}{% endblock %}

{% block body %}
{% trans_default_domain "translator" %}

<div class="header">
	<img style="display: block !important;margin: auto !important;" id="logotop" src="{{ img }}">
</div>
<div class="head">
{{ "demande_rib.titre"|trans({}, "translator") }}
</div>
<div class="nomSalon">
  {{ app.session.get('nomSalon') }}
</div>
<div class="container">
	<div id="actions" class="formAction">

		{{ form_start(form, {'attr': {'class': 'allForm form-horizontal demande_rib', 'id':'DemandeRib'} }) }}

		    {{ form_errors(form)}}
				<div class="form-group">
					<label class="control-label label col-sm-4 col-xs-12" for="personnel"> {{ form_label(form.matricule) }}</label>
					<div class="col-sm-9  col-xs-12">
						{{ form_widget(form.matricule, { 'attr': {'class': 'form-control'} }) }}
					</div>
				</div>

				<div class="form-group">
					<label class="control-label label col-sm-4 col-xs-12" for="rib">{{ form_label(form.rib) }}</label>
					<div class="col-sm-9  col-xs-12">
						{{ form_widget(form.rib, { 'attr': {'class': 'input-file'} }) }}
						<label for="demande_rib_rib" class="label-file">
							<i class="glyphicon glyphicon-download-alt"></i>
							<span>{{ "demande_rib.choice"|trans({}, "translator") }}</span>
						</label>
					</div>
				</div>
			<div id="actionsButtons">
				{{ form_end(form) }}
						<a href="{{ path('homepage') }}" class="btn-black precedent">
								{{ "global.back"|trans({}, "translator") }}
						</a>
		  </div>
		</div>
	</div>
	<script src="{{ asset('js/custom-file-input.js') }}"></script>
	<!-- .......................... POP-UP ................................-->
	<div id="myModal" class="modal fade" role="dialog">
	  <div class="modal-dialog">

	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal">&times;</button>
	        <h4 style="color:black;" class="modal-title">{{ "demande_rib.rappel"|trans({}, "translator") }}</h4>
	      </div>

	      <div class="modal-body">
					{{ "demande_rib.info"|trans({}, "translator") }}
	      </div>

	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">{{ "global.poursuivre"|trans({}, "translator") }}</button>
	        <button type="button" style="float:left;" class="btn btn-default"  onclick="window.location.href = '{{ path("homepage") }}'">{{ "global.retourac"|trans({}, "translator") }}</button>
	      </div>
	    </div>

	  </div>
	</div>

	<script type="text/javascript">
	  	$('#myModal').modal('show');
			$("#myModal").css('display','flex');

	</script>
{% endblock %}
