						</div>
						{{ form_widget(form.dateDebutAbsence, { 'attr': {'class':'styleDate'} }) }}

					 </div>

					 <div class="col-sm-8">
						 <div class="jour">
							<label class="control-label label">{{ "demande_solde_tout_compte.dateFinAbsence"|trans({}, "translator") }}</label>
