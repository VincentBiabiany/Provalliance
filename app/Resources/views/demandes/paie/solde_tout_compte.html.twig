				</div>
				<div class="form-group">
					<label class="control-label label col-sm-4 col-xs-12" for="adresse">{{ form_label(form.adresse) }}</label>
					<div class="col-sm-8  col-xs-12">
						{{ form_widget(form.adresse) }}
					</div>
				</div>


				<div class="form-group">
					<label class="control-label label col-sm-4 col-xs-12" for="dateSortie">{{ "demande_solde_tout_compte.dateSortie"|trans({}, "translator") }}</label>
					<div class="col-sm-3  col-xs-12">
						{{ form_widget(form.dateSortie) }}
					</div>

					<label class="control-label label col-sm-4 col-xs-12" for="dateDernierJour">{{ "demande_solde_tout_compte.dateDernierJour"|trans({}, "translator") }}</label>
					<div class="col-sm-3  col-xs-12">
						{{ form_widget(form.dateDernierJour) }}
					</div>
				</div>
				<div id='GroupMotif' class="form-group">
					<label class="control-label label col-sm-4 col-xs-12" for="typeMotif">{{ form_label(form.motif) }}</label>
					<div class="col-sm-8  col-xs-12 ">
