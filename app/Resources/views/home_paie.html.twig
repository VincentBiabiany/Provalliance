{% extends 'base.html.twig' %}
{% block title %}{{ "home_paie.header"|trans({}, "translator") }}{% endblock %}

{% block body %}

<div class="header">
    <img style="display: block !important;margin: auto !important;" id="logotop" src="{{ img }}">
</div>
<div class="head" >
    {{ "home_paie.header"|trans({}, "translator") }}

</div>
<div class="nomSalon">
  {{ app.session.get('nomSalon') }}
</div>
<div class="container">
    <div class="row">
        <div id="actions" class="menuAction">

            <div class="col-sm-12">
                <div class="col-sm-6 block">
                    <div class="under-block" onclick="window.location.href ='{{ path("acompte") }}'"><p class="carre">{{ "home_paie.acompte"|trans({}, "translator") }}</p></div>
                </div>
                <div class="col-sm-6 block">
                    <div class="under-block" onclick="window.location.href ='{{ path("rib") }}'"><p class="carre">{{ "home_paie.rib"|trans({}, "translator") }}</p></div>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="col-sm-6 block">
                    <div class="under-block"><p class="carre">{{ "home_paie.attestation"|trans({}, "translator") }}</p></div>
                </div>
                <div class="col-sm-6 block" onclick="window.location.href ='{{ path("solde_tout_compte") }}'">
                    <div class="under-block"><p class="carre">{{ "home_paie.solde"|trans({}, "translator") }}</p></div>
                </div>
            </div>

            <button class="btn-black precedent" onclick="window.location.href = '{{ path("homepage") }}'" >{{ "global.back"|trans({}, "translator") }}</button>

        </div>
    </div>
</div>

{% endblock %}
