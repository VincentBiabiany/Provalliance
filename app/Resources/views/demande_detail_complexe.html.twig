{% extends 'base.html.twig' %}
{% block title %}Résumé de la demande{% endblock %}

{% block body %}

<div class="header">
	{% if is_granted('ROLE_ADMIN') %}

	<img style="display: block !important;margin: auto !important;" id="logotop" src="{{ asset("img/") ~ salon.enseigne.logo }}">
	<hr/>
	<span id="nomSalon">{{ app.session.get('nomSalon') }}</span>
	{% endif  %}

</div>

<div class="head">
	{{ typedemande }}
</div>

<div class="container">
	<div id="wrapperForm" class="row">
		{% form_theme form 'form/acompte.html.twig' %}
		{% block content %}
			{{ form_start(form, {'attr': {'class': ''} }) }}
			{{ form_end(form) }}
		{% endblock %}

		<div id="infosDemande" class="col-sm-12">
			<p> <b>Demandeur : </b>{{ demandeur.nom }} {{ demandeur.prenom }} </p>
			<p> <p> <b>Date d'envoi :</b>  {{ date }} </p> <b>Statut:</b>  {{ statut }} {% if dateTraitement is not null %} le {{ dateTraitement }} {% endif %}</p>
			<p> <b>Salon :</b> {{ salon.appelation }} </p>
			<p> <b>Adresse :</b>  {{ salon.adresse1 }} {{ salon.codepostal }} {{ salon.ville }}  </p>


			{% if is_granted('ROLE_PAIE') or is_granted('ROLE_JURIDIQUE') %}
			<p> <b>Siren :</b>  {{ salon.siren }}</p>
			<p> <b>Rcs :</b>  {{ salon.rcsVille }}</p>
			{% endif  %}


			{% if docService != null %}
				<div class="form-group" style="padding-top: 50px">
					<label class="control-label label col-sm-3 col-xs-12" for="personnel"> {{ form_label(form) }}</label>
						<a href="{{ asset('uploads/files/' ~ docService ) }}" ><div class="col-sm-9">
								{{ form_widget(form, { 'attr' : {'class': 'getDocument form-control' } }) }}
					 </div></a>
				</div>
			{% endif %}

			{% if docSalon != null %}
				<div class="form-group" style="padding-top: 50px">
					<label class="control-label label col-sm-3 col-xs-12" for="personnel"> {{ form_label(form2.docSalon) }} </label>
						<a href="{{ asset('uploads/files/' ~ docSalon ) }}" ><div class="col-sm-9">
								{{ form_widget(form2.docSalon, { 'attr' : {'class': 'getDocument form-control' } }) }}
					 </div></a>
				</div>
			{% endif %}


		</div>

		<!-- ................... Parti Validation ..........................-->

		{% if is_granted('ROLE_PAIE') or is_granted('ROLE_JURIDIQUE') %}

			<div class="" style="max-width: 100%; margin: auto;">
				<hr id="separatorDetailDemande"/>
				{{ form_start(form2, {'attr': {'id':'form_message','novalidate': 'novalidate'}}) }}
				{{ form_row(form2.message) }}
				{{ form_row(form2.reject, {'attr': {'class': 'btn-black end reject'} }) }}
				{{ form_row(form2.accept, {'attr': {'class': 'btn-black end accept'} }) }}
				{{ form_end(form2) }}
			</div>

		{% endif  %}

		{% if (is_granted('ROLE_MANAGER') or is_granted('ROLE_COORD')) and (statut == 3) %}

		<div class="" style="max-width: 100%; margin: auto;">
			<hr id="separatorDetailDemande"/>
			{{ form_start(form2, {'attr': {'id':'form_message', 'novalidate': 'novalidate'}}) }}

			{{ form_row(form2.message) }}
			{{ form_row(form2.reject, {'attr': {'class': 'btn-black end reject'} }) }}
			{{ form_row(form2.accept, {'attr': {'class': 'btn-black end accept'} }) }}

			{{ form_end(form2) }}
		</div>

		{% endif  %}

		<div class="col-sm-12" style="padding: 0;">
			<button  onclick="window.location.href ='{{ path("demande") }}'" class="btn-black precedent">Précédent</button>
		</div>

	</div>
</div>

<script language="javascript">

$('.closeAlert').bind('click', function(){
	$(".alert").css('display','none');
	$(".alert").remove();
});

</script>
{% endblock %}
