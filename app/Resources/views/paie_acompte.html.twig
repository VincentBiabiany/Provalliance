{% extends 'base.html.twig' %}
{% form_theme form 'form/error.html.twig' %}
{% block title %}Demande d'acompte{% endblock %}

{% block body %}
{% trans_default_domain "demande_acompte" %}
<div class="header">
	<img style="display: block !important;margin: auto !important;" id="logotop" src="{{ img }}">
</div>

<div class="head">
	{{ "demandeacompte.titre"|trans({}, "demande_acompte") }}
</div>
<div class="nomSalon">
  {{ app.session.get('nomSalon') }}
</div>
<div class="container">
	<div id="actions" class="formAction">
		{{ form_start(form, {'attr': {'class': 'allForm demande_acompte', 'id':'formAccompte'} }) }}

				<div class="form-group">
					<label class="control-label label col-sm-4 col-xs-12" for="personnel"> {{ form_label(form.idPersonnel) }}</label>
					<div class="col-sm-9  col-xs-12">
						{{ form_widget(form.idPersonnel, { 'attr': {'class': 'form-control'} }) }}
					</div>
				</div>
				<div class="form-group">
					<label class="control-label label col-sm-4 col-xs-12" for="montant">{{ form_label(form.montant) }}</label>
					<div class="col-sm-9  col-xs-12">
						{{ form_widget(form.montant, { 'attr': {'class': 'form-control'} }) }}
					</div>
				</div>

		<div id="actionsButtons">
			{{ form_end(form) }}
						<a href="{{ path('home_paie') }}" class="btn-black precedent">
								{{ "demandeacompte.back"|trans({}, "demande_acompte") }}
						</a>
		</div>
	</div>

</div>
<!-- .......................... POP-UP ................................-->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 style="color:black;" class="modal-title">{{ "embauche.attention"|trans({}, "embauche") }}</h4>
      </div>

      <div class="modal-body">
				{{ "demandeacompte.info"|trans({}, "demande_acompte") }}
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ "global.poursuivre"|trans({}, "global") }}</button>
        <button type="button" style="float:left;" class="btn btn-default"  onclick="window.location.href = '{{ path("homepage") }}'">{{ "global.retourac"|trans({}, "global") }}</button>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">
  	$('#myModal').modal('show');
</script>

{% endblock %}
