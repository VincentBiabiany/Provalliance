        </div></a>
    </div>

</div>
</div>
<script src="https://cdn.rawgit.com/prashantchaudhary/ddslick/master/jquery.ddslick.min.js"></script>
<script language="javascript">
    var ddData = [
        {
            value: 1,
            text: "La DÃ©fense",
            imageSrc: "{{ asset('img/fab.png') }}"
        },
        {
            value: 1,
            text: "Boulogne",
            imageSrc: "{{ asset('img/pro.png') }}"
        },
        {
            value: 1,
            text: "Versailles",
            imageSrc: "{{ asset('img/sai.jpg') }}"
        }
    ];

    $('#myDropdown').ddslick({
        data:ddData,
        width:200,
        imagePosition:"center",
        defaultSelectedIndex:1,
        onSelected: function(selectedData){
            logo = document.getElementById('logotop');
            console.log(selectedData);
            logo.src = selectedData.selectedData.imageSrc;
            $.post('{{ path('homepage') }}', {variable: selectedData.selectedData.imageSrc});
        }
    });

</script>


