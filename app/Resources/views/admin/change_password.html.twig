{% extends 'base.html.twig' %}
{% block title %}Welcome{% endblock %}

{% block body %}

<div class="containerModal">
  <div id="actions">
		<div class="AccountInfo alert alert-warning">
		 Modification du mot de passe.
		</div>

    {{ form_start(form, { 'attr': { 'id': 'changePassword' } }) }}
    <div style="max-width: 100%; margin: auto;">

      <div class="row">

            <div class="form-group" style="padding-top: 50px">
                <label class="control-label label col-sm-3 col-xs-12" for="salon"> {{ form_label(form.plainPassword.first) }}</label>
                     <div class="col-sm-9">
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                    </div>
            </div>
            <div class="form-group" style="padding-top: 50px">
                <label class="control-label label col-sm-3 col-xs-12" for="salon"> {{ form_label(form.plainPassword.second) }}</label>
                     <div class="col-sm-9">
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                    </div>
            </div>


      </div>
    </div>
    {{ form_end(form) }}

   </div>
</div>
<div class="modal-footer">
<button type="button" class="btn btn-default" data-dismiss="modal">{{ "login.close"|trans({}, "login") }}</button>
</div>


<script type="text/javascript">

          $('.deco').css('display','none');

</script>
{% endblock %}
