.pad-box {
padding-top: 10px;
}

.upload {
color:black;
}

}
	</style>
	
		{% for type, messages in app.session.flashBag.all %}
			{% for message in messages %}
				<div class="{{ type }}">
					{{ message|trans({}, 'FOSUserBundle') }}
				</div>
			{% endfor %}
		{% endfor %}
		{% block fos_user_content %}{% endblock %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
