{% trans_default_domain 'FOSUserBundle' %}

<div class="container">

	<div class="col-md-12 " style="padding-bottom: 90px;">
		<!--<img class="img-responsive logo-prov" src="{{ asset('img/Provalliance.png') }}"/> -->
	</div>

	<div id="formContent">

        {% if error %}
			<div class="alert alert-danger col-md-12">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
		<form class="form-horizontal login-form" action="{{ path("fos_user_security_check") }}" method="post">
		<div class="row">
		  {% if csrf_token %}
			<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
		  {% endif %}
		  <div class="form-group block">
			<label class="control-label label lab-log col-sm-4 col-xs-12" for="nom">{{ "login.username"|trans({}, "translator") }}</label>
			 <div class="col-xs-8">
				<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required="required" />
			</div>
		  </div>
		  <div class="form-group">
			<label class="control-label label lab-log col-sm-4 col-xs-12" for="pwd">{{ "login.password"|trans({}, "translator") }}</label>
			<div class="col-xs-8">
				<input type="password" id="password" name="_password" class="form-control" required="required" />
			</div>
		  </div>
		  <button type="submit" id="_submit" name="_submit" class="btn-black">{{ "login.connexion"|trans({}, "translator") }}</button>
			<a style="cursor:pointer;float:left;" data-toggle="modal" data-target="#myModal"><p style="color:black;">{{ "login.lost"|trans({}, "translator") }}</p></a>
		</div>
		</form>
		<div id="Nova" > {{ "login.dev"|trans({}, "translator") }} <a href="http://www.nova-technology.fr/">NOVA Technology</a> </div>
	</div>

	<div id="myModal" class="modal fade" role="dialog">
	  <div class="modal-dialog">
		<div class="modal-content">
		  <div class="modal-header">
			<button type="button" class="close" data-dismiss="modal">&times;</button>
			<h4 style="color:black;" class="modal-title">{{ "login.contact"|trans({}, "translator") }}</h4>
		  </div>
		  <div class="modal-body">
			<p style="color:black;">
				{{ "login.msg"|trans({}, "translator") }} <br>
                {{ "login.phone"|trans({}, "translator") }}<br>
				<a style="color:black;" href="mailto:{{ "login.email"|trans({}, "translator") }}">email : {{ "login.email"|trans({}, "translator") }}</a>
			</p>
		  </div>
		  <div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">{{ "login.close"|trans({}, "translator") }}</button>
		  </div>
		</div>

	  </div>
	</div>

</div>

<script type="text/javascript">

          $('#topNav, .bg').css('display','none');

</script>
